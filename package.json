  "main": "app.js",
  "scripts": {
    "test": "mocha --reporter spec --require babel-register --require babel-polyfill",
    "server": "nodemon ./src/app.js --exec babel-node",
    "client": "node start-client.js",
    "build:server": "babel ./src -d ./dist",
    "start": "concurrently \"mongod\" \"npm run server\" \"npm run client\"",
